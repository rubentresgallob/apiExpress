<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head', { title: 'Buscar Hábitos' }) %>
  <body>
    <%- include('../partials/header') %>
    <main>
      <h2>Buscar Hábitos</h2>
      <form action="/habits/search" method="GET">
        <input type="text" name="q" placeholder="Buscar hábito...">
        <button type="submit">Buscar</button>
      </form>
      <ul>
        <% results.forEach(habit => { %>
          <li><%= habit.name %></li>
        <% }) %>
      </ul>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>